{
  "compilerOptions": {
    "experimentalDecorators": true,
    "emitDecoratorMetadata": true,
    "outDir": "lib",
    "target": "esnext",
    "module": "esnext",
    "moduleResolution": "node",
    "strict": true,
    "jsx": "preserve",
    "importHelpers": true,
    "esModuleInterop": true,
    "allowSyntheticDefaultImports": true,
    "declaration": true,
    "inlineSourceMap": true,
    "baseUrl": ".",
    "types": [
      "webpack-env",
      "vue-tsx-support/enable-check",
      "vue-tsx-support/options/enable-vue-router",
      "vuetify"
    ],
    "paths": {
      "@/*": ["src/*"]
    },
    "lib": ["dom", "dom.iterable", "esnext", "scripthost"]
  },
  "include": [
    "src/index.ts",
    "src/components/**/*.ts",
    "src/components/**/*.tsx",
    "tests/**/*.ts",
    "tests/**/*.tsx",
    "typings"
  ],
  "exclude": ["node_modules"]
}
